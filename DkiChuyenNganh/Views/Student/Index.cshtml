@{
    ViewData["Title"] = "Đăng Ký Chuyên Ngành";   
}

<h2>Đăng Ký Chuyên Ngành</h2>
<form method="post" asp-action="ShowKQ">
    <div>
        <label for="studentId">Mã Sinh Viên:</label>
        <input type="text" id="MSSV" name="MSSV " required />
    </div>
    <div>
        <label for="HoTen">Họ và Tên:</label>
        <input type="text" id="HoTen" name="HoTen" required />
    </div>
    <div>
        <label for="DiemTB">Điểm trung bình:</label>
        <inputtype ="number" step="0.5" id="DiemTB" name="DiemTB" required />
    </div>
    <div>
        <label for="ChuyenNganh">Chuyên ngành đăng ký:</label>
        <select id="ChuyenNganh" name="ChuyenNganh" required>
            <option value="CNPM">Công Nghệ Phần Mềm</option>
            <option value="HTTT">Hệ Thống Thông Tin</option>
            <option value="ANM">An Ninh Mạng</option>
            <option value="MMT">Mạng Máy Tính</option>

        </select>
        </div>
    <button type="submit">Đăng Ký</button>

</form>

@section   Scripts {
    <script>
        console.log("Đăng Ký Chuyên Ngành page loaded.");
    </script>
}
